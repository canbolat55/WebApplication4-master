@{
    ViewData["Title"] = "Otel Rezervasyonu";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div>
        <label for="HotelName">Otel Adı</label>
        <input type="text" id="HotelName" name="hotelName" class="form-control" required />
    </div>

    <div>
        <label for="CheckInDate">Giriş Tarihi</label>
        <input type="date" id="CheckInDate" name="checkInDate" class="form-control" required />
    </div>

    <div>
        <label for="CheckOutDate">Çıkış Tarihi</label>
        <input type="date" id="CheckOutDate" name="checkOutDate" class="form-control" required />
    </div>

    <div>
        <label for="NumberOfGuests">Kişi Sayısı</label>
        <input type="number" id="NumberOfGuests" name="numberOfGuests" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Rezervasyon Yap</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
