<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bilet Satın Alma</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        /* Navbar */
        /* Navbar düzeni */
        .navbar {
            background-color: #333;
            padding: 10px;
            display: flex;
            justify-content: space-between; /* Logo ve bağlantıları ayırır */
            align-items: center; /* Dikeyde ortalar */
        }

        /* Navbar linkleri kısmı */
        .navbar-links {
            display: flex;
            align-items: center; /* Linkleri yatayda hizalar */
        }

        .navbar a {
            color: white;
            text-decoration: none;
            margin-right: 20px;
        }

            .navbar a:hover {
                color: #FFD700;
            }


        /* Şehir seçme kısmı */
        .city-select-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 30px;
        }

        .city-select {
            width: 200px;
            padding: 10px;
            border: 2px solid #333;
            border-radius: 50px; /* Oval şekil */
            text-align: center;
            font-size: 16px;
            background-color: #FFD700; /* Sarı renk */
            color: #333;
            margin: 0 10px;
        }

            .city-select:hover {
                background-color: #f1f1f1;
                color: #000;
                cursor: pointer;
            }

        .swap-btn {
            font-size: 24px;
            color: #333;
            cursor: pointer;
            margin: 0 15px;
        }

            .swap-btn:hover {
                color: #FFD700;
            }

        /* Şehir arama önerileri */
        .city-suggestions {
            max-height: 200px;
            overflow-y: auto;
            border: 2px solid #333;
            border-radius: 10px;
            position: absolute;
            width: 200px;
            background-color: #fff;
            z-index: 1000;
            display: none;
            margin-top: 5px;
        }

            .city-suggestions div {
                padding: 8px;
                cursor: pointer;
            }

                .city-suggestions div:hover {
                    background-color: #FFD700;
                    color: #333;
                }

        /* Modal İçeriği */
        .modal-content {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
        }

        .modal-header {
            border-bottom: none;
        }

        /* Gidiş Tarihi Butonunun Stili */
        #journeyDate {
            background-color: #FFD700;
            color: #333;
            border-radius: 50px;
            font-size: 16px;
            padding: 10px 20px;
            cursor: pointer;
            border: none;
            width: 100%; /* Düğmenin tam genişlikte olması için */
        }

            #journeyDate:hover {
                background-color: #f1f1f1;
                color: #000;
            }

        /* Buton container */
        .button-container {
            text-align: center;
            margin-top: 20px;
        }

        /* Icon Select Container */
        .icon-select-container {
            display: flex;
            justify-content: space-around;
            margin-top: 30px;
        }

        .icon-item {
            text-align: center;
            font-size: 24px;
            color: #333;
        }

            .icon-item:hover {
                color: #FFD700;
                cursor: pointer;
            }

            .icon-item span {
                display: block;
                margin-top: 8px;
            }

        /* Datepicker Butonları */
        .datepicker {
            width: 100%;
        }

        /* Simge Seçildiğinde Boyama */
        .icon-select {
            color: #333;
        }

        .icon-item.selected .icon-select {
            color: #FFD700; /* Sarı renge dönsün */
        }

        .logo {
            width: 95px; /* Logonun genişliği */
            height: auto; /* Yüksekliği otomatik yapar */
            opacity: 0.8; /* Şeffaflık ekler */
        }

    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <a href="#">
            <img src="images/logo.jpg" alt="Logo" class="logo">
        </a>
        <div class="navbar-links">
            <!-- Hakkımızda bağlantısını güncelledik -->
            <a href="@Url.Action("Hakkimizda", "Custom")">Hakkımızda</a>

            <a href="#" data-bs-toggle="modal" data-bs-target="#authModal">Üye Girişi</a>
        </div>
    </div>


    <!-- Şehir ve Tarih Seçimi -->
    <div class="container">
        <h4 class="text-center mt-4">Bilet Satın Alma İşlemi</h4>

        <div class="city-select-container">
            <!-- Şehir seçme input -->
            <input type="text" id="fromCityInput" class="city-select" placeholder="Başlangıç Şehri" onkeyup="filterCities('fromCity')" />
            <div class="city-suggestions" id="fromCitySuggestions"></div>

            <div class="swap-btn">
                <i class="fas fa-exchange-alt" id="swapCities"></i>
            </div>

            <!-- Şehir seçme input -->
            <input type="text" id="toCityInput" class="city-select" placeholder="Varış Şehri" onkeyup="filterCities('toCity')" />
            <div class="city-suggestions" id="toCitySuggestions"></div>
        </div>

        <!-- Gidiş Tarihi Seçimi -->
        <div class="container mt-5">
            <label for="journeyDate" class="form-label">Gidiş Tarihi</label>
            <input type="text" id="journeyDate" class="form-control" placeholder="Tarih Seçiniz" readonly />
        </div>

        <!-- Seçilebilir İkonlar -->
        <div class="icon-select-container">
            <div class="icon-item" id="busIcon">
                <i class="fas fa-bus icon-select"></i>
                <span>Otobüs</span>
            </div>
            <div class="icon-item" id="planeIcon">
                <i class="fas fa-plane icon-select"></i>
                <span>Uçak</span>
            </div>
            <div class="icon-item" id="hotelIcon">
                <i class="fas fa-hotel icon-select"></i>
                <span>Otel</span>
            </div>
        </div>

        <!-- Bilet Ara Butonu -->
        <div class="button-container">
            <button class="btn btn-warning" id="searchTicketBtn">Bilet Ara</button>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="authModalLabel">Üye Girişi</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="username" placeholder="Kullanıcı adınızı girin" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <p class="text-center">Hesabınız yok mu? <a href="#" data-bs-toggle="modal" data-bs-target="#registerModal" data-bs-dismiss="modal">Üye Olun</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="registerModalLabel">Üye Ol</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="registerForm">
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Ad Soyad</label>
                            <input type="text" class="form-control" id="fullname" placeholder="Adınızı ve soyadınızı girin" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">E-posta</label>
                            <input type="email" class="form-control" id="email" placeholder="E-posta adresinizi girin" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Telefon</label>
                            <input type="text" class="form-control" id="phone" placeholder="Telefon numaranızı girin" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Şifre Tekrarı</label>
                            <input type="password" class="form-control" id="confirmPassword" placeholder="Şifrenizi tekrar girin" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Üye Ol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery ve Datepicker için script -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>

    <script>
        // Türkiye'deki şehirler listesi
        const cities = [
            "Adana", "Adıyaman", "Afyonkarahisar", "Ağrı", "Amasya", "Ankara", "Antalya", "Artvin",
            "Aydın", "Balıkesir", "Bilecik", "Bingöl", "Bitlis", "Bolu", "Burdur", "Bursa",
            "Çanakkale", "Çankırı", "Çorum", "Denizli", "Diyarbakır", "Düzce", "Edirne", "Elazığ",
            "Erzincan", "Erzurum", "Eskişehir", "Gaziantep", "Giresun", "Gümüşhane", "Hakkari",
            "Hatay", "Iğdır", "Isparta", "İstanbul", "İzmir", "Kahramanmaraş", "Karabük", "Karaman",
            "Kastamonu", "Kayseri", "Kırıkkale", "Kırklareli", "Kırşehir", "Kocaeli", "Konya", "Kütahya",
            "Malatya", "Manisa", "Mardin", "Mersin", "Muğla", "Muş", "Nevşehir", "Niğde", "Ordu",
            "Osmaniye", "Rize", "Sakarya", "Samsun", "Şanlıurfa", "Siirt", "Sinop", "Sivas", "Tekirdağ",
            "Tokat", "Trabzon", "Tunceli", "Uşak", "Van", "Yalova", "Yozgat", "Zonguldak"
        ];

        // Şehir arama ve öneri
        function filterCities(inputId) {
            const input = document.getElementById(`${inputId}Input`);
            const suggestionsDiv = document.getElementById(`${inputId}Suggestions`);
            const query = input.value.toLowerCase();
            suggestionsDiv.innerHTML = '';

            if (query) {
                cities.filter(city => city.toLowerCase().includes(query)).forEach(filteredCity => {
                    const div = document.createElement('div');
                    div.textContent = filteredCity;
                    div.onclick = () => {
                        input.value = filteredCity;
                        suggestionsDiv.innerHTML = '';
                    };
                    suggestionsDiv.appendChild(div);
                });
                suggestionsDiv.style.display = 'block';
            } else {
                suggestionsDiv.style.display = 'none';
            }
        }

        // Takvim tarih seçici
        $('#journeyDate').datepicker({
            format: 'dd/mm/yyyy',
            startDate: new Date(),
            todayBtn: "linked",
            autoclose: true,
            container: 'body',  // Takvimi body'nin içine ekleyerek konumlandırılmasını sağla
        });

        // Şehirleri değiştirme
        document.getElementById('swapCities').onclick = function() {
            const fromCity = document.getElementById('fromCityInput').value;
            const toCity = document.getElementById('toCityInput').value;

            document.getElementById('fromCityInput').value = toCity;
            document.getElementById('toCityInput').value = fromCity;
        };

        // İkon seçimi
        const iconItems = document.querySelectorAll('.icon-item');
        iconItems.forEach(item => {
            item.onclick = function() {
                iconItems.forEach(icon => icon.classList.remove('selected'));
                this.classList.add('selected');
            };
        });

        // Bilet Ara butonuna tıklama
        document.getElementById('searchTicketBtn').onclick = function() {
            const fromCity = document.getElementById('fromCityInput').value;
            const toCity = document.getElementById('toCityInput').value;
            const journeyDate = document.getElementById('journeyDate').value;

            if (!fromCity || !toCity || !journeyDate) {
                alert('Lütfen tüm alanları doldurun.');
                return;
            }

            alert(`Başlangıç: ${fromCity}\nVarış: ${toCity}\nTarih: ${journeyDate}`);
        };

        // Üye girişi ve kayıt formu
        $('#loginForm').submit(function(e) {
            e.preventDefault();
            alert('Giriş başarılı!');
            $('#authModal').modal('hide');
        });

        $('#registerForm').submit(function(e) {
            e.preventDefault();
            alert('Üyelik başarılı!');
            $('#registerModal').modal('hide');
        });
    </script>
</body>
</html>
