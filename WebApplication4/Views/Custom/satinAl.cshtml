@{
    // Controller'dan gelen mesajı alıyoruz
    var message = ViewData["message"] as string;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Otobüs Bilet Satın Alma</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
        }

        .card {
            margin-top: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            text-align: center;
            border-radius: 15px 15px 0 0;
            padding: 15px;
        }

        .card-body {
            padding: 30px;
        }

        .form-control {
            margin-bottom: 15px;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 14px;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .ticket-info {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
        }

        .ticket-info p {
            margin: 5px 0;
            font-size: 16px;
        }

        .ticket-info .price {
            font-weight: bold;
            color: #e67e22;
        }

        .btn-submit {
            margin-top: 20px;
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            width: 100%;
        }

        .btn-submit:hover {
            background-color: #218838;
        }

        .contact-info, .payment-info, .passenger-info {
            background-color: #fff;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
        }

        .contact-info h5, .payment-info h5, .passenger-info h5 {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

      

    </style>
</head>
<body>

    <div class="container">
        <!-- Ticket Information -->
        <div class="ticket-info">
            <h5>Seçilen Bilet Bilgisi</h5>
            <p><strong>Firma:</strong> Metro Turizm</p>
            <p><strong>Başlangıç:</strong> İstanbul</p>
            <p><strong>Varış:</strong> Ankara</p>
            <p><strong>Koltuk No:</strong> 5</p>
            <p><strong>Hareket Zamanı:</strong> 10:30</p>
            <p class="price"><strong>Fiyat:</strong> 250 TL</p>
        </div>

        <!-- Passenger Information Form -->
        <div class="passenger-info">
            <h5>Yolcu Bilgileri</h5>
            <form>
                <input type="text" class="form-control" placeholder="Yolcu Adı" required>
                <input type="text" class="form-control" placeholder="Yolcu Soyadı" required>
                <input type="date" class="form-control" placeholder="Doğum Tarihi" required>
            </form>
        </div>

        <!-- Contact Information Form -->
        <div class="contact-info">
            <h5>İletişim Bilgileri</h5>
            <form>
                <input type="text" class="form-control" placeholder="Ad Soyad" required>
                <input type="email" class="form-control" placeholder="E-posta" required>
                <input type="tel" class="form-control" placeholder="Telefon Numarası" required>
            </form>
        </div>

        <!-- Payment Information Form -->
        <div class="payment-info">
            <h5>Ödeme Bilgileri</h5>
            <form>
                <input type="text" class="form-control" placeholder="Kart Sahibi Adı" required>
                <input type="text" class="form-control" placeholder="Kart Numarası" required>
                <input type="text" class="form-control" placeholder="Son Kullanma Tarihi (MM/YY)" required>
                <input type="text" class="form-control" placeholder="CVV" required>
            </form>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn-submit">Ödeme Yap ve Bileti Al</button>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
